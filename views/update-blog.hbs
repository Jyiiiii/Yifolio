<section class="formBox">
  <h4>Update the blog</h4>

  <div class="errorMessagesForElse">
    {{#if errorMessages.length}}
      <p>Fail to update the blog because:</p>
      <ul>
        {{#each errorMessages}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </div>

  <form
    action="/update-blog/{{blog.id}}"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="textField">
      Title:<input type="text" name="title" value="{{{blog.title}}}" />
    </div>
    <div class="textField">
      Date:<input type="date" name="date" value="{{{blog.date}}}" />
    </div>
    <div class="textField">
      Intro:<input type="text" name="intro" value="{{{blog.intro}}}" />
    </div>
    <div class="textField">
      Upload image:
      <div class="uploadField">
        <img id="imgForUploaded" src="/uploadedImages/{{blog.imgURL}}" />
        <input type="file" name="image" />
      </div>
    </div>
    <input type="submit" value="Updat the Blog" />
  </form>
</section>