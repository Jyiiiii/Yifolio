<section class="formBox">
  <h4>Update the project</h4>

  <div class="errorMessagesForElse">
    {{#if errorMessages.length}}
      <p>Fail to update the project because:</p>
      <ul>
        {{#each errorMessages}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </div>

  <form method="post" enctype="multipart/form-data">
    <div class="textField">
      Title:<input type="text" name="title" value="{{{project.title}}}" />
    </div>
    <div class="textField">
      Intro:<input type="text" name="intro" value="{{{project.intro}}}" />
    </div>
    <div class="textField">
      Upload image:
      <input type="file" name="image" value="{{{project.image}}}" />
    </div>
    <input type="submit" value="Update" />
  </form>
</section>