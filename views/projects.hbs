<div>
  <form action="/projects-search" method="get" id="searchBar">
    <input
      type="text"
      placeholder="Search..."
      name="searchValue"
      value="{{searchValue}}"
    />
    <input type="submit" value="🔍" />
  </form>
</div>

<div class="errorMessagesForSearch">
  {{#if errorMessages.length}}
    {{#each errorMessages}}
      <p>{{this}}</p>
    {{/each}}
  {{/if}}
</div>

<div class="portfolioDisplay">
  {{#each projects}}
    <div class="gridItem">
      <div class="imageContainer">
        <a href="/projects/{{id}}">
          <img src="/uploadedImages/{{imgURL}}" alt="{{title}} image" />
        </a>
      </div>
      <a href="/projects/{{id}}"><p class="title">{{title}}</p></a>
    </div>
  {{/each}}
</div>