{{#if blog}}
  <div>
    <h4 class="blogTitle">{{blog.title}}</h4>
    <h5 class="blogDate">{{blog.date}}</h5>
    <p class="blogIntro">{{blog.intro}}</p>
  </div>

  {{#if isLoggedIn}}
    <form action="/update-blog/{{blog.id}}" method="get">
      <input class="updateButton" type="submit" value="Update" />
    </form>

    <form action="/delete-blog/{{blog.id}}" method="post">
      <input class="deleteButton" type="submit" value="Delete" />
    </form>
  {{/if}}

  <div>
    <img
      class="detailPageImg"
      src="/uploadedImages/{{blog.imgURL}}"
      alt="{{blog.title}} image"
    />
  </div>
{{else}}
  <p>I have not post this blog yet.ðŸ¤ª</p>
{{/if}}