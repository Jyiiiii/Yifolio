<h1 id="contactHeader">
  Wanna get in touch?
  <br />
  Let's talk!
</h1>

<section>
  <div id="emailLink">
    <p>For general questions:</p>
    <a href="jyiiii047@gmail.com">jyiiii047@gmail.com</a>
  </div>
  <br />
  <div id="socialLinks">
    <a href="https://www.instagram.com/jyyy_ssie/">
      <img src="../public/instagramicon.svg" />
    </a>
    <a href="https://www.facebook.com/profile.php?id=100072766143133">
      <img src="../public/facebookicon.svg" />
    </a>
  </div>
</section>

{{#if errorMessages.length}}
  <p>Fail to submit your contact infos because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

<section>
  <form action="" method="post" id="contactForm">
    <div class="form-group">
      <label class="form-label" for="input-example-1">Name</label>
      <input
        class="form-input"
        type="text"
        id="input-example-1"
        placeholder="First Name"
        name="firstName"
        value="{{firstName}}"
      />
      <input
        class="form-input"
        type="text"
        id="input-example-1"
        placeholder="Last Name"
        name="lastName"
        value="{{lastName}}"
      />
    </div>
    <div>
      <label class="form-label" for="input-example-1">Email</label>
      <input
        class="form-input"
        type="email"
        id="input-example-1"
        placeholder="Your Email"
        name="email"
        value="{{email}}"
      />
    </div>
    <div>
      <label class="form-label" for="input-example-1">Project Deadline</label>
      {{! <input type="month" placeholder="MM" name="month" /> }}
      <input type="date" placeholder="Date" name="date" />
      {{! <input type="number" placeholder="YY" name="year" /> }}
    </div>
    <div>
      <label class="form-label" for="input-example-3">Description</label>
      <textarea
        class="form-input"
        id="input-example-3"
        placeholder="Short Description..."
        rows="3"
        name="description"
      ></textarea>
    </div>
    <input type="submit" value="SEND" />
  </form>
</section>

